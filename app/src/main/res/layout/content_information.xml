                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="4dp">
                    <ImageView
                        android:id="@+id/icon_cultura"
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="24dp"
                        android:src="@drawable/iconculturalowex"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginTop="16dp"
                        android:layout_centerVertical="true"
                        android:text="Cultura Perrona"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/icon_cultura"
                        android:layout_marginStart="9dp" />
                    <ImageButton
                        android:layout_marginTop="12dp"
                        android:id="@+id/cultura_playstore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/blanco"
                        android:paddingRight="8dp"
                        android:layout_toLeftOf="@+id/cultura_git"
                        android:src="@drawable/ic_github_circle_grey600_24dp"/>

                    <ImageButton
                        android:layout_marginTop="12dp"
                        android:id="@+id/cultura_git"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/blanco"
                        android:paddingLeft="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_google_play_grey600_24dp"/>

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


