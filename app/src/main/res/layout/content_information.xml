                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_email_grey600_24dp"/>
            </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <TextView
