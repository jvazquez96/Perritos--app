<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="itesm.mx.perritos.event.AddEventActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ActionBarTheme"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titulo del evento"
        android:paddingTop="24dp"
        android:textColor="#131313"
        android:paddingBottom="8dp"
        android:textSize="24dp"
        android:fontFamily="sans-serif"/>

    <EditText
        android:id="@+id/edit_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripcion"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="16dp"
        android:fontFamily="sans-serif"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="16dp"
            android:text="Desde:"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/text_startDate"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Holo.Spinner"
            android:text="Lunes, May 11, 2017"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/text_startTime"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Holo.Spinner"
            android:text="14:20" />

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="16dp"
            android:text="Hasta:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/text_endDate"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Holo.Spinner"
            android:text="Lunes, May 11, 2017"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/text_endTime"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Holo.Spinner"
            android:text="14:20" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <CheckBox
            android:id="@+id/check_visible"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Visible"
            android:layout_alignBaseline="@+id/text_location"
            android:layout_alignBottom="@+id/text_location"
            android:layout_alignParentStart="true" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_location_on_black_24dp"
            android:layout_alignTop="@+id/text_location"
            android:layout_toStartOf="@+id/text_location" />


        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:id="@+id/text_location"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Lugar"/>

    </RelativeLayout>

    <ImageButton
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/image_placeholder"/>


    </LinearLayout>

</LinearLayout>
