<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="end|bottom"
    android:background="#EEEEEE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/layer_card_background">

    <ImageView
        android:id="@+id/image_news"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/perrito" />
<LinearLayout
    android:id="@+id/linearlayoutnews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Hoy habrá un excelente día para salir a correr con tu mascota"
        android:textSize="16dp"
        android:textColor="@color/negro"
        android:maxLines="2"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:layout_marginBottom="8dp"
        android:text="Esta noticia se escribió en ITESM MTYEsta noticia se escribió en ITESM MTY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/iconculturalow" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Movimiento Cultura de Altura, Cultura Perrona A.C."
            android:textSize="10sp"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/petLikeBtn"
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_favorite_black_24dp"
            android:tint="@color/colorSecondary"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/newsVisibleItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:tint="@color/gris"
            android:paddingLeft="16dp"
            android:src="@drawable/ic_visibility_off_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/petLikeBtn" />

</RelativeLayout>


    </LinearLayout>
</LinearLayout>
</LinearLayout>

